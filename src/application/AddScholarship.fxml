<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<ScrollPane xmlns="http://javafx.com/javafx/17.0.1" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="application.AddScholarshipController"
            fitToWidth="true"
            prefHeight="400" prefWidth="500"
            style="-fx-background-color: #F9F9F9; -fx-border-color: #CCCCCC; -fx-border-radius: 5;">

    <content>
        <VBox spacing="15" style="-fx-padding: 20; -fx-background-color: #FFFFFF; -fx-border-radius: 5;">
            <!-- Scholarship Name -->
            <TextField fx:id="nameField" promptText="Scholarship Name"
                       style="-fx-font-size: 14px; -fx-padding: 10; -fx-border-color: #CCCCCC; -fx-border-radius: 5;" />

            <!-- Provider Name -->
            <TextField fx:id="providerField" promptText="Provider Name"
                       style="-fx-font-size: 14px; -fx-padding: 10; -fx-border-color: #CCCCCC; -fx-border-radius: 5;" />

            <!-- Description -->
            <TextArea fx:id="descriptionField" promptText="Scholarship Description"
                      style="-fx-font-size: 14px; -fx-padding: 10; -fx-border-color: #CCCCCC; -fx-border-radius: 5;" />

            <!-- Eligibility Criteria -->
            <TextField fx:id="eligibilityField" promptText="Eligibility Criteria"
                       style="-fx-font-size: 14px; -fx-padding: 10; -fx-border-color: #CCCCCC; -fx-border-radius: 5;" />

            <!-- Application Deadline -->
            <TextField fx:id="deadlineField" promptText="Application Deadline (e.g., YYYY-MM-DD)"
                       style="-fx-font-size: 14px; -fx-padding: 10; -fx-border-color: #CCCCCC; -fx-border-radius: 5;" />

            <!-- Award Amount -->
            <TextField fx:id="awardAmountField" promptText="Award Amount"
                       style="-fx-font-size: 14px; -fx-padding: 10; -fx-border-color: #CCCCCC; -fx-border-radius: 5;" />

            <!-- Country -->
            <TextField fx:id="countryField" promptText="Country (e.g., USA, UK)"
                       style="-fx-font-size: 14px; -fx-padding: 10; -fx-border-color: #CCCCCC; -fx-border-radius: 5;" />

            <!-- Academic Level -->
            <ComboBox fx:id="levelField" promptText="Level (MS, BS, PhD)"
                      style="-fx-font-size: 14px; -fx-padding: 10; -fx-border-color: #CCCCCC; -fx-border-radius: 5;" />

            <!-- Contact Information -->
            <TextArea fx:id="contactInfoField" promptText="Contact Information"
                      style="-fx-font-size: 14px; -fx-padding: 10; -fx-border-color: #CCCCCC; -fx-border-radius: 5;" />

            <!-- Application Procedure -->
            <TextArea fx:id="applicationProcedureField" promptText="Application Procedure"
                      style="-fx-font-size: 14px; -fx-padding: 10; -fx-border-color: #CCCCCC; -fx-border-radius: 5;" />

            <!-- Buttons Section -->
            <HBox spacing="15" alignment="CENTER" style="-fx-padding: 10;">
                <Button text="Add Scholarship" onAction="#addScholarship"
                        style="-fx-background-color: #28A745; -fx-text-fill: white; -fx-font-weight: bold; -fx-border-radius: 5; -fx-padding: 10;" />
                <Button text="Cancel" onAction="#cancel"
                        style="-fx-background-color: #DC3545; -fx-text-fill: white; -fx-font-weight: bold; -fx-border-radius: 5; -fx-padding: 10;" />
            </HBox>
        </VBox>
    </content>
</ScrollPane>
