<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane xmlns="http://javafx.com/javafx/17.0.1" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="application.CustomerSupportController" prefHeight="400.0" prefWidth="600.0">

    <VBox spacing="20.0" alignment="CENTER" style="-fx-padding: 20; -fx-background-color: #F5F5F5;">
        <Label fx:id="supportTitle" text="Customer Support" style="-fx-font-size: 18px; -fx-font-weight: bold;" />
        <ScrollPane style="-fx-padding: 10; -fx-background-color: #FFFFFF;">
            <VBox fx:id="supportContent" spacing="10.0" style="-fx-padding: 10;" />
        </ScrollPane>
        <Button text="Close" onAction="#closeWindow" style="-fx-background-color: #DC3545; -fx-text-fill: white;" />
    </VBox>
</AnchorPane>
