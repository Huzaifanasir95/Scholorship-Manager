<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.ScrollPane?>

<ScrollPane xmlns="http://javafx.com/javafx/17.0.1" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="application.ApplicationViewDetailsController" fitToHeight="true" fitToWidth="true" 
            style="-fx-background-color: transparent; -fx-border-color: transparent;">
    
    <VBox spacing="20.0" style="-fx-padding: 30; -fx-background-color: #FFFFFF; -fx-border-color: #4CAF50; -fx-border-width: 2; -fx-border-radius: 15; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 5);" 
          prefHeight="600" maxHeight="600" prefWidth="800">

        <!-- Header Section -->
        <Label text="Application Details" style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-text-fill: #1E90FF; -fx-padding: 10; -fx-alignment: center;" />
        
        <!-- Section Title: Personal Information -->
        <Label text="Personal Information" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #4CAF50; -fx-padding: 10; -fx-font-style: italic;" />
        
        <!-- Personal Information Labels -->
        <Label fx:id="nameLabel" text="Name: " style="-fx-font-size: 16px; -fx-text-fill: #333333;" />
        <Label fx:id="fatherNameLabel" text="Father's Name: " style="-fx-font-size: 16px; -fx-text-fill: #333333;" />
        <Label fx:id="cnicLabel" text="CNIC: " style="-fx-font-size: 16px; -fx-text-fill: #333333;" />
        <Label fx:id="dobLabel" text="Date of Birth: " style="-fx-font-size: 16px; -fx-text-fill: #333333;" />
        <Label fx:id="addressLabel" text="Address: " style="-fx-font-size: 16px; -fx-text-fill: #333333;" />
        <Label fx:id="phoneLabel" text="Phone: " style="-fx-font-size: 16px; -fx-text-fill: #333333;" />
        <Label fx:id="emailLabel" text="Email: " style="-fx-font-size: 16px; -fx-text-fill: #333333;" />
        
        <!-- Section Title: Academic Information -->
        <Label text="Academic Information" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #4CAF50; -fx-padding: 10; -fx-font-style: italic;" />
        
        <!-- Academic Information Labels -->
        <Label fx:id="universityLabel" text="University: " style="-fx-font-size: 16px; -fx-text-fill: #333333;" />
        <Label fx:id="degreeProgramLabel" text="Degree Program: " style="-fx-font-size: 16px; -fx-text-fill: #333333;" />
        <Label fx:id="cgpaLabel" text="CGPA: " style="-fx-font-size: 16px; -fx-text-fill: #333333;" />
        <Label fx:id="matricMarksLabel" text="Matric Marks: " style="-fx-font-size: 16px; -fx-text-fill: #333333;" />
        <Label fx:id="interMarksLabel" text="Intermediate Marks: " style="-fx-font-size: 16px; -fx-text-fill: #333333;" />
        
        <!-- Section Title: Additional Information -->
        <Label text="Additional Information" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #4CAF50; -fx-padding: 10; -fx-font-style: italic;" />
        
        <!-- Additional Information Labels -->
        <Label fx:id="achievementsLabel" text="Academic Achievements: " style="-fx-font-size: 16px; -fx-text-fill: #333333;" />
        <Label fx:id="sopLabel" text="Statement of Purpose: " style="-fx-font-size: 16px; -fx-text-fill: #333333;" />
        <Label fx:id="extracurricularLabel" text="Extracurricular Activities: " style="-fx-font-size: 16px; -fx-text-fill: #333333;" />
        <Label fx:id="scholarshipLabel" text="Scholarship: " style="-fx-font-size: 16px; -fx-text-fill: #333333;" />
        
    </VBox>
</ScrollPane>
